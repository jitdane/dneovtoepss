# use ec2 ubuntu ami.  amazon linux doesn't support nodes

#Lookup on how to install docker-machine:
#https://docs.docker.com/machine/install-machine/

$ base=https://github.com/docker/machine/releases/download/v0.16.0 &&
  curl -L $base/docker-machine-$(uname -s)-$(uname -m) >/tmp/docker-machine &&
  sudo install /tmp/docker-machine /usr/local/bin/docker-machine

# to check
$ docker-machine --version
docker-machine version 0.16.0, build 702c267f

$ cat ~/mymach.sh
export AWS_ACCESS_KEY_ID=your_access_key
export AWS_SECRET_ACCESS_KEY=your_secret_key
export AWS_VPC_ID=vpc-74437e13
export AWS_DEFAULT_REGION=ap-southeast-1
export AWS_INSTANCE_TYPE=t2.micro
export AWS_ROOT_SIZE=8    # in GB
export AWS_VOLUME_TYPE=gp2
export AWS_AMI=ami-04613ff1fdcd2eab1

$ source mymach.sh

$ docker-machine create --driver amazonec2 node1
